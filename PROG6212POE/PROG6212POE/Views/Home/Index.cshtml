@{
    ViewData["Title"] = "Home Page";
}

<h2 class="text-center fw-bold display-4">Welcome to the Claims Monthly Contract System</h2>

<div id="claimControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <!--image 1-->
        <div class="carousel-item active">
            <img class="d-block w-100 " src="~/images/bus_prof.jfif" alt="first slide" />
        </div>

        <!--image 2-->
        <div class="carousel-item">
            <img class="d-block w-100 " src="~/images/data_sec.jfif" alt="second slide" />
        </div>

        <!--image 3-->
        <div class="carousel-item">
            <img class="d-block w-100 " src="~/images/dig_doc.jfif" alt="third slide" />
        </div>

        <!--image 4-->
        <div class="carousel-item">
            <img class="d-block w-100 " src="~/images/money_calc.jfif" alt="fourth slide" />
        </div>

        <!--image 5-->
        <div class="carousel-item">
            <img class="d-block w-100 " src="~/images/money_growth.png" alt="fifth slide" />
        </div>
    </div>
    <!--Controls and animations-->
    <a class="carousel-control-prev" href="#claimControls"
       role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>

    <!--Next slide-->
    <a class="carousel-control-next" href="#claimControls"
       role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>



