@model PROG6212POE.Models.Claims

<h2>@ViewData["Title"]</h2>


<form asp-action="EditClaims" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" name="claimId" value="@Model.ID" />

    <div class="form-group">
        <label for="DescriptionOfWork">Description of Work</label>
        <input type="text" class="form-control" id="DescriptionOfWork" name="DescriptionOfWork" value="@Model.DescriptionOfWork" required />
    </div>

    <div class="form-group">
        <label for="HoursWorked">Hours Worked</label>
        <input type="number" class="form-control" id="HoursWorked" name="HoursWorked" value="@Model.HoursWorked" required />
    </div>

    <div class="form-group">
        <label for="RatePerHour">Rate per Hour</label>
        <input type="number" class="form-control" id="RatePerHour" name="RatePerHour" value="@Model.RatePerHour" required />
    </div>

    <div class="form-group">
        <label for="ClaimStatus">Claim Status</label>
        <input type="text" class="form-control" id="ClaimStatus" name="ClaimStatus" value="@Model.ClaimStatus" />
    </div>

    <div class="form-group">
        <label for="newFile">Upload File</label>
        <input type="file" class="form-control" id="newFile" name="newFile" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<a href="@Url.Action("ClaimDetails", new { id = Model.ID })">Back to Claim Details</a>
